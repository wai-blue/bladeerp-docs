{# Add Person Form with Cards #}
{% set formContentPerson %}
  <div class="form-container">
    <div class="form-col">
      {{ include('components/card.twig', {
        'title': 'Primary Contact Person',
        'content': pcp
      }) }}
    </div>
    <div class="form-col">
      {{ include('components/card.twig', {
        'title': 'Address',
        'content': address
      }) }}
    </div>
    <div class="form-col">
      {{ include('components/card.twig', {
        'title': 'Additional Contact Data',
        'content': acd
      }) }}
    </div>
  </div>
{% endset %}

{# Tag List #}
{% set categories %}
  {{ include('components/inputs/button-selector.twig', {
    'options': ['Tag #1','Tag #2','Tag #3','Tag #4','Tag #5'],
    'multiselect' : true
    })
  }}

  {{ include('components/inputs/varchar.twig', {
    'title':'New tag'
    })
  }}
{% endset %}

{# Card with Tag List #}
{% set categoriesCard %}
  {{ include('components/card.twig', {
    'title': 'Categories',
    'content': categories
  }) }}
{% endset %}

{# Table With Persons #}
{% set persons %}
  {{ include('components/table.twig', {
    'title': {
      'text': 'Persons',
      'leftButtons': include('components/button.twig', {'cssClass': 'btn-primary per-personalModal', 'text': 'Add person', 'icon': 'fas fa-plus', 'onclick': 'add_person_connection()'}),
    },
    'columns': [
      {'title':'Title Before','type': 'varchar'},
      {'title':'First Name','type': 'varchar'},
      {'title':'Last Name','type': 'varchar'},
      {'title':'Middle Name','type': 'varchar'},
      {'title':'Title After','type': 'varchar'},
      {'title':'Email','type': 'varchar'},
      {'title':'Phone','type': 'varchar'},
      {'title':'LinkedIn URL','type': 'varchar'},
      {'title':'Is Active','type': 'active', 'options': ['active','inactive']},
      {'title':'','type': 'activeButton'},
    ],
    'minRowCount': 2,
    'maxRowCount': 5
  }) }}
{% endset %}

{# Table with Addresses #}
{% set addresses %}
  {{ include('components/table.twig', {
    'title': {
      'text': 'Addresses',
      'leftButtons': include('components/button.twig', {'cssClass': 'btn-primary per-addressModal', 'text': 'Add address', 'icon': 'fas fa-plus', 'onclick': 'add_address_connection()' })
    },
    'columns': [
      {'title':'Street 1','type': 'varchar'},
      {'title':'Street 2','type': 'varchar'},
      {'title':'City','type': 'varchar'},
      {'title':'Postal Code','type': 'varchar'},
      {'title':'Country','type': 'varchar'},
      {'title':'Notes','type': 'varchar'},
      {'title':'Location','type': 'varchar'},
      {'title':'Is Active','type': 'active', 'options': ['active','inactive']},
      {'title':'','type': 'activeButton'},
    ],
    'minRowCount': 1,
    'maxRowCount': 3
  }) }}
{% endset %}

